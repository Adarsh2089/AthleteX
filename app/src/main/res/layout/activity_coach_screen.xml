<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@color/backgroundFill"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logOutBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/logout"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_30sdp"/>
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/user"
            android:layout_margin="@dimen/_20sdp"/>

        <TextView
            android:id="@+id/coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Profile"
            android:layout_gravity="center"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold" />



    </LinearLayout>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_below="@+id/cards"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/user"/>

                <TextView
                    android:id="@+id/athlete_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vinit Dubey"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:layout_marginTop="@dimen/_15sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/weekly_report1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coach_name"
                    android:text="Weekly Report"
                    app:icon="@drawable/report"
                    android:backgroundTint="@color/secondaryColor"
                    android:layout_centerHorizontal="true"
                    app:iconGravity="textStart"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    app:iconSize="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coach_name"
                    android:text=""
                    app:icon="@drawable/chat"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:backgroundTint="@color/secondaryColor"
                    android:layout_centerHorizontal="true"
                    app:iconGravity="textStart"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    app:iconSize="24dp"/>

            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_below="@+id/first"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/user"/>

                <TextView
                    android:id="@+id/athlete_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vinit Dubey"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:layout_marginTop="@dimen/_15sdp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/weekly_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coach_name"
                    android:text="Weekly Report"
                    app:icon="@drawable/report"
                    android:backgroundTint="@color/secondaryColor"
                    android:layout_centerHorizontal="true"
                    app:iconGravity="textStart"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    app:iconSize="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coach_name"
                    android:text=""
                    app:icon="@drawable/chat"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:backgroundTint="@color/secondaryColor"
                    android:layout_centerHorizontal="true"
                    app:iconGravity="textStart"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    app:iconSize="24dp"/>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Nearby Tournaments / Upcoming Events "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/card"
        android:fontFamily="sans-serif"
        android:textSize="18sp" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tournament_sprintx"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_marginRight="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SprintX"
                        android:textColor="#0B1361"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18ssp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <!--sample button to submit entered data inside from edit text-->
                    <ImageView
                        android:id="@+id/sprintx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/primaryColor"
                        android:src="@drawable/changers"
                        android:text="Login" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tournament_goalstorm"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_marginRight="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GoalStorm "
                        android:textColor="#0B1361"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18ssp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <!--sample button to submit entered data inside from edit text-->
                    <ImageView
                        android:id="@+id/goalstorm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/primaryColor"
                        android:src="@drawable/goalstorm"
                        android:text="Login" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tournament_metrofit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_marginRight="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MetroFit  "
                        android:textColor="#0B1361"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18ssp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <!--sample button to submit entered data inside from edit text-->
                    <ImageView
                        android:id="@+id/metrofit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/primaryColor"
                        android:src="@drawable/metrofit"
                        android:text="Login" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tournament_smash"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_marginRight="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smash"
                        android:textColor="#0B1361"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18ssp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <!--sample button to submit entered data inside from edit text-->
                    <ImageView
                        android:id="@+id/smash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/primaryColor"
                        android:src="@drawable/smash"
                        android:text="Login" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tournament_karishma"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_marginRight="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karishma"
                        android:textColor="#0B1361"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18ssp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <!--sample button to submit entered data inside from edit text-->
                    <ImageView
                        android:id="@+id/karishma"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_65sdp"
                        android:backgroundTint="@color/primaryColor"
                        android:src="@drawable/karishma"
                        android:text="Login" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </HorizontalScrollView>
    </RelativeLayout>

</FrameLayout>
