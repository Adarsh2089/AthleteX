<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".diet">

    <!-- 🔹 Fixed Search Bar (Does NOT Scroll) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#00E0EF"
        android:clipToOutline="true"
        android:useCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#00E0EF"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search..."
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:hintTextColor="@android:color/darker_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/baseline_search"
                android:contentDescription="Search Icon"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 🔹 Main Parent CardView (Count Daily Calories) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#00E0EF"
        android:clipToOutline="true"
        android:useCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00E0EF"
            android:padding="16dp"
            android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count daily Calories :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:paddingBottom="12dp"/>

        <!-- 🔹 Inner CardView (Progress Section) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FF7043"
            android:clipToOutline="true"
            android:useCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <!-- Eaten Calories -->
            <TextView
                android:id="@+id/eaten_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eaten: 234"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingBottom="4dp"/>

            <!-- Calories Left -->
            <TextView
                android:id="@+id/calories_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000 Calories Left"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:paddingBottom="12dp"/>

            <!-- 🔴 Red Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/common_progress_bar"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 🔹 Horizontal Nutrient Progress Bar Section -->
    <!-- 🔹 Horizontal Nutrient Progress Bar Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="4">

        <!-- 🥩 Protein -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFEB3B"> <!-- Yellow Background -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/protein_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="40"
                    android:progressDrawable="@drawable/common_progress_bar"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 🥑 Fats -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#8BC34A"> <!-- Green Background -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fats"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/fats_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/common_progress_bar"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 🍞 Carbs -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#03A9F4"> <!-- Blue Background -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/carbs_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="30"
                    android:progressDrawable="@drawable/common_progress_bar"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 🥦 Fiber -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FF5722"> <!-- Orange-Red Background -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiber"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/fiber_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/common_progress_bar"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Planned Meals"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:textColor="@color/red"
        android:textStyle="normal"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp">

            <!-- Breakfast Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#09f3b7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Breakfast"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:id="@+id/meal_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Plus Icon"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:src="@drawable/plan"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lunch Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#09f3b7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lunch"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:id="@+id/lunch_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Plus Icon"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:src="@drawable/plan"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Dinner Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="#09f3b7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dinner"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                    <ImageView
                        android:id="@+id/dinner_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Plus Icon"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:src="@drawable/plan"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>










</LinearLayout>
